{
  "name": "vue3-testing-uikit",
  "version": "0.0.1",
  "description": "Тестовая uikit библиотека",
  "main": "./dist/vue3-testing-uikit.umd.js",
  "module": "./dist/vue3-testing-uikit.es.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue3-testing-uikit.es.js",
      "require": "./dist/vue3-testing-uikit.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "src/debug/assets/scss"
  ],
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run check && rimraf dist && run-p type-check build-only",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit --composite false",
    "lint": "eslint . --ext .vue,.ts",
    "lint:fix": "eslint . --ext .vue,.ts --fix",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "prepare": "husky install",
    "check": "npm run type-check && npm run lint && npm run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(json)": [
      "npm run format"
    ],
    "*.(vue|ts)": [
      "npm run check"
    ]
  },
  "devDependencies": {
    "@babel/types": "^7.22.10",
    "@popperjs/core": "^2.11.8",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^20.5.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/core": "^10.3.0",
    "@vueuse/integrations": "^10.3.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "eslint-plugin-vue": "^9.17.0",
    "focus-trap": "^7.5.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.1.6",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.65.1",
    "tippy.js": "^6.3.7",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-tsc": "^1.8.8",
    "vue3-toastify": "^0.1.12"
  }
}
